<% content_for :game_start do %>
    <script type="text/javascript">ChuClone.model.Constants.JOYSTICK.ENABLED = true;</script>
    <script type="text/javascript" src="/game/js/ChuClone/components/player/RemoteJoystickInputComponent.js"></script>
    <script type="text/javascript">
		ChuClone.model.Constants.SERVER.ASSET_PREFIX = "game/";
		<%= render :partial => "game/game_init", :locals => { :level => @level } %>
	</script>
<% end %>

<% content_for :game_style do %>
    <style>
        body {
            background-color: #333333;
        }
        :focus { outline: 0; }
    </style>

<% end %>
