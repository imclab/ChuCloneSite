<!DOCTYPE html>
<html>
<head>
  <title>ChuCloneSite</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id='contentContainer'>
		<div id='user_nav'>
			<% if current_user %>
				Welcome <%= current_user.name %>
				<%= link_to "Sign out", signout_path %>
			<% else %>
				<%= link_to "Sign in with twitter", "/auth/twitter" %>
			<% end %>
		</div>
		<%= yield %>

		<%= flash_helper_2 %>
	</div>
</body>
</html>
