<div class="container_12" >
	<div class="grid_12 alpha"><h2>All Levels</h2></div>


	<div class="clear"></div>
	<div class="push_1 grid_11">
	<div class="grid_2 grayBorder alpha">Title</div>
	<div class="grid_2 grayBorder">Created at</div>
	<%# <div class="grid_1 grayBorder">playable</div> %>
	<%# <div class="grid_1 grayBorder">comp.</div> %>
	<div class="grid_1 grayBorder">Active</div>
	<div class="grid_1 grayBorder" style="margin-bottom:5px;">Order</div>
	<div class="clear"></div>
	<% @levels.each do |level| %>
		<% ampm = level.created_at.hour < 12 ? "am" : "pm"  %>
		<div class="grid_2 grayBorder alpha"><%= level.title %></div>
		<div class="grid_2 grayBorder"><%= "#{distance_of_time_in_words_to_now(level.created_at)} ago"  %></div>

			<% if false %>
				<div class="grid_1 grayBorder"><%= 0 if level.times_played.nil? %></div>
				<div class="grid_1 grayBorder"><%= 0 if level.times_completed.nil? %></div>
			<% end  %>
		<div class="grid_1 grayBorder">
			<%form_tag "levels/edit", :method => :post do %>
				<%= check_box "level", "playable", { :checked => level.playable, :onclick => "console.log(this.parentNode.submit());"}%>
			<% end %>
		</div>
			<div class="grid_1 grayBorder"><%= level.order_index  %></div>
			<div class="grid_4 grayBorder omega" style="position:relative;">
				<%= link_to 'Play', game_path(level) %> | <%= link_to 'Editor', editor_path(level) %> | <%= link_to 'Modify', edit_level_path(level) %> | <%= link_to 'Destroy', level, :confirm => 'Are you sure?', :method => :delete %>
			</div>
		<div class="clear"></div>
	<% end  %>
		<div class="clear"></div>
		<div class="grid_2 grayBorder omega margin_top_1"><p><%= link_to 'New Level', new_level_path %><p></div>
		<div class="grid_2 grayBorder omega margin_top_1"><p><%= link_to 'Order Levels', reorder_path %><p></div>

	</div>
 </div>


